{
  "name": "claude-code-menubar",
  "productName": "Claude Code Menu Bar",
  "version": "1.0.0",
  "description": "Launch and manage Claude Code terminal sessions from your menu bar",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/claude-code-menubar.git"
  },
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "rebuild": "electron-rebuild -f -w node-pty"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "node-pty": "^1.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    }
  },
  "keywords": [
    "claude",
    "claude-code",
    "terminal",
    "menu bar",
    "macOS",
    "developer-tools",
    "electron"
  ]
}
